@model IEnumerable< DotNet6MVCWebApp.Models.Todo>
@{
    ViewBag.Title = "Edit";
}

@{
    ViewBag.Title = "Index";
    int count = 0;
}

<h2>List of todo items</h2>
<a href="/home/add" class="btn btn-primary">Add New Item</a>
<form method="post" action="/Home/SortBy">
    Sort By @Html.DropDownList("Sortby", new SelectList(new List<string>() { "Start Date", "End Date" }),
    new { htmlAttributes = new {@class = "form-control"}})
    <input type="submit" value="Go" class="btn btn-primary" />
</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Serial No</th>
            <th>Item Id</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(count = count + 1)
                    </td>
                    <td>
                        @item.ItemId
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.StartDate.ToShortDateString()
                    </td>
                    <td>
                        @item.EndDate.ToShortDateString()
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }, new { @class = "btn btn-primary" })
                    </td>
                    <td>
                       
                        <input type="button" class="btn btn-primary mx-1" value="Delete From Razor To Js Func" onclick="deletePill('@item.ItemId')" />
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@section scripts {
    <script>
        //Function Button Delete
        function deletePill(Id) {
            alert("User Id:" + Id + " will be Deleted!");
            console.log(Id);
        }
        
    </script>
}



