                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfAdm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfDis)
                </td>
              
            </tr>
        }
