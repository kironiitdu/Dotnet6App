@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<form method="post">
    <div class="form-group">
        <label asp-for="TestNumber"  class="control-label pt-2" style="font-size:18px"></label>
        <input asp-for="TestNumber"  class="form-control" />
        <span asp-validation-for="TestNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TestString" class="control-label pt-2" style="font-size:18px"></label>
        <input asp-for="TestString" class="form-control" />
        <span asp-validation-for="TestString" class="text-danger"></span>
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
